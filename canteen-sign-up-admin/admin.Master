<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="admin.master.cs" Inherits="canteen_sign_up_admin.admin" %>

<!DOCTYPE html>

<html>
<head runat="server">
    <title></title>
    <link href="styles/master.css" rel="stylesheet" type="text/css" />
    <link href="styles/pending.css" rel="stylesheet" type="text/css" />
    <link href="styles/default.css" rel="stylesheet" type="text/css" />
    <asp:ContentPlaceHolder ID="head" runat="server" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(window).on('load', function () {
            $('.chkRowAll')[0].childNodes[0].addEventListener('change', e => {
                $('.chkRow').each(function () {
                    $(this)[0].childNodes[0].checked = $('.chkRowAll')[0].childNodes[0].checked;
                })
            });
            $('.chkRow').each(function () {
                $(this)[0].childNodes[0].addEventListener('change', e => {
                    if (!e.target.checked) {
                        $('.chkRowAll')[0].childNodes[0].checked = false;
                    }
                    else {
                        var allChecked = true;
                        $('.chkRow').each(function () {
                            if ($(this)[0].childNodes[0].checked == false) {
                                allChecked = false;
                                return false;
                            }
                        });
                        if (allChecked) { $('.chkRowAll')[0].childNodes[0].checked = true; }
                    }
                });
            });
        });
    </script>
</head>
<body>
    <form id="form1" runat="server">
        <div class="Navigation">
            <asp:Image runat="server" ImageUrl="~/images/MensaLogo.png" CssClass="imageItem" />
            <br />
            <asp:Button ID="btnPending" runat="server" Text="Ausstehend" Width="90%" OnClick="btnPending_Click" CssClass="sideNavButton" BorderStyle="None"/>
            <asp:Button ID="btnConfirmed" runat="server" Text="Bestätigt" Width="90%" OnClick="btnConfirmed_Click" CssClass="sideNavButton" BorderStyle="None"/>
            <asp:Button ID="btnActive" runat="server" Text="Aktiv" Width="90%" OnClick="btnActive_Click" CssClass="sideNavButton" BorderStyle="None"/>
        </div>

        <div class="Heading">

        </div>

        <div class="PageContent">
            <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server"/>
        </div>
    </form>
</body>
</html>
